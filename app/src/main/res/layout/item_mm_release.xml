<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="2016-07-01"
        android:textColor="#BDBDBD"
        android:textSize="16sp"
        android:gravity="center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/item_mm_release"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="left|bottom"
            android:gravity="center"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_doctor_logo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/my_logo"/>

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_doctor_logo"
            android:textSize="18dp"
            android:text="王大仙"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_doctor_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_doctor_name"
            android:textSize="18dp"
            android:text="上海瑞金医院"
            android:textColor="#757575"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/read_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:text="999人预览"
            android:textColor="#757575"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"/>

    </RelativeLayout>

</LinearLayout>
