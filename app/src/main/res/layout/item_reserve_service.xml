<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@color/white"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingBottom="7dp"
    android:id="@+id/ll_common"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_common_image"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/hospital3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_common_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美酷宝宝"
                android:textSize="14sp"
                android:textColor="#333333"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_common_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$4950"
                android:layout_marginRight="7dp"
                android:textColor="@color/default_green"/>
        </LinearLayout>
        <TextView
            android:layout_marginBottom="7dp"
            android:id="@+id/tv_common_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="美国-洛杉矶"
            android:textColor="#333333"/>
    </LinearLayout>
</LinearLayout>